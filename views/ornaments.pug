extends layout

block content
  h1= title
  - var results = results;
  div(class="container-fluid")
    div(class="row m-1")
    each item in results
      - let destination = `dispatch(\"/ornaments/update?id=${item._id}\")` 
      div(class="col-sm-2", class="m-1", width="215px") Ornament Type:#{item.OrnamentType}, Ornament Cost:#{item.OrnamentCost}, Ornament Strength:#{item.OrnamentStrength}
        button.btn( class="btn-primary ml-1", onclick= destination) Update 
        button.btn( class="btn-success", onclick= detail) Details
        button.btn( class="btn-danger", onclick= deleteItem) Delete
  br
  div(class="container-fluid")
    div(class="row")
    - for(var i=0;i<results.length;i++) {
        div(class="col-sm-2" width="215px" onClick=`buy(${i+1})`) #{results[i].OrnamentType}
    -}
  script. 
    function buy(indexNum) {
      alert(`You purchased item ${indexNum}`);
    }
    function dispatch(path){ 
      window.location.href=path 
    } 